{
  "name": "gestion-scolaire-backend",
  "version": "1.0.0",
  "description": "Backend API pour l'application de gestion scolaire",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --testPathPattern=test --passWithNoTests",
    "test:ci": "jest --ci --testPathPattern=test",
    "test:watch": "jest --watch"
  },
  "keywords": ["nodejs", "express", "mongodb", "api", "gestion-scolaire"],
  "author": "MHD",
  "license": "MIT",
  "dependencies": {
    "express": "4.18.2",
    "mongoose": "7.0.0",
    "dotenv": "16.0.3",
    "cors": "2.8.5",
    "jsonwebtoken": "9.0.0",
    "bcryptjs": "2.4.3",
    "prom-client": "14.0.1",
    "diskusage": "1.1.3"
  },
  "devDependencies": {
    "jest": "29.0.0",
    "supertest": "6.3.0",
    "nodemon": "2.0.22"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testMatch": ["**/test/**/*.test.js"],
    "verbose": true
  }
}
